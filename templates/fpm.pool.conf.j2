[{{ item.pool_name | mandatory }}]
listen = /run/php/{{ item.pool_name }}.sock
listen.owner = {{ item.pool_name }}
listen.group = www-data
listen.mode = 0660
user = {{ item.pool_name }}
group = www-data
pm = dynamic
pm.max_children = 75
pm.start_servers = 8
pm.min_spare_servers = 5
pm.max_spare_servers = 20
pm.max_requests = 500

